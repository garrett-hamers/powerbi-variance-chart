{
    "supportsHighlight": true,
    "supportsKeyboardFocus": true,
    "supportsMultiVisualSelection": true,
    "supportsSynchronizingFilterState": true,
    "drilldown": {
        "roles": ["category"]
    },
    "tooltips": {
        "supportedTypes": {
            "default": true,
            "canvas": true
        },
        "roles": ["tooltips"]
    },
    "dataRoles": [
        {
            "displayName": "Category",
            "name": "category",
            "kind": "Grouping",
            "description": "The category axis (e.g., Month, Department, Product)"
        },
        {
            "displayName": "Group",
            "name": "group",
            "kind": "Grouping",
            "description": "Group for small multiples view"
        },
        {
            "displayName": "Values",
            "name": "actual",
            "kind": "Measure",
            "description": "Actual values (e.g., actual sales, actual costs)"
        },
        {
            "displayName": "Previous Year",
            "name": "previousYear",
            "kind": "Measure",
            "description": "Previous year values for YoY comparison"
        },
        {
            "displayName": "Plan",
            "name": "budget",
            "kind": "Measure",
            "description": "Plan or budget values for comparison"
        },
        {
            "displayName": "Forecast",
            "name": "forecast",
            "kind": "Measure",
            "description": "Forecast values for comparison"
        },
        {
            "displayName": "Tooltips",
            "name": "tooltips",
            "kind": "Measure",
            "description": "Additional measures to show in tooltips"
        },
        {
            "displayName": "Comments",
            "name": "comments",
            "kind": "Grouping",
            "description": "Text field for annotations and comments"
        }
    ],
    "objects": {
        "general": {
            "properties": {
                "filter": {
                    "type": { "filter": true }
                }
            }
        },
        "chartSettings": {
            "properties": {
                "chartType": {
                    "type": {
                        "enumeration": [
                            { "value": "variance", "displayName": "Variance Chart" },
                            { "value": "waterfall", "displayName": "Waterfall Chart" },
                            { "value": "column", "displayName": "Column Chart" },
                            { "value": "columnStacked", "displayName": "Stacked Column" },
                            { "value": "bar", "displayName": "Bar Chart" },
                            { "value": "line", "displayName": "Line Chart" },
                            { "value": "area", "displayName": "Area Chart" },
                            { "value": "combo", "displayName": "Combo Chart" },
                            { "value": "dot", "displayName": "Dot Chart" },
                            { "value": "lollipop", "displayName": "Lollipop Chart" }
                        ]
                    }
                },
                "comparisonType": {
                    "type": {
                        "enumeration": [
                            { "value": "budget", "displayName": "vs Plan" },
                            { "value": "previousYear", "displayName": "vs Previous Year" },
                            { "value": "forecast", "displayName": "vs Forecast" }
                        ]
                    }
                },
                "orientation": {
                    "type": {
                        "enumeration": [
                            { "value": "vertical", "displayName": "Vertical" },
                            { "value": "horizontal", "displayName": "Horizontal" }
                        ]
                    }
                },
                "invertVariance": {
                    "type": { "bool": true }
                }
            }
        },
        "title": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "titleText": {
                    "type": { "text": true }
                },
                "fontSize": {
                    "type": { "numeric": true }
                },
                "fontColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "alignment": {
                    "type": {
                        "enumeration": [
                            { "value": "left", "displayName": "Left" },
                            { "value": "center", "displayName": "Center" },
                            { "value": "right", "displayName": "Right" }
                        ]
                    }
                }
            }
        },
        "dataLabels": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "showValues": {
                    "type": { "bool": true }
                },
                "showVariance": {
                    "type": { "bool": true }
                },
                "showPercentage": {
                    "type": { "bool": true }
                },
                "fontSize": {
                    "type": { "numeric": true }
                },
                "decimalPlaces": {
                    "type": { "numeric": true }
                },
                "displayUnits": {
                    "type": {
                        "enumeration": [
                            { "value": "auto", "displayName": "Auto" },
                            { "value": "none", "displayName": "None" },
                            { "value": "thousands", "displayName": "Thousands (K)" },
                            { "value": "millions", "displayName": "Millions (M)" },
                            { "value": "billions", "displayName": "Billions (B)" }
                        ]
                    }
                },
                "negativeFormat": {
                    "type": {
                        "enumeration": [
                            { "value": "minus", "displayName": "-1,234" },
                            { "value": "parentheses", "displayName": "(1,234)" }
                        ]
                    }
                },
                "labelDensity": {
                    "type": {
                        "enumeration": [
                            { "value": "all", "displayName": "All" },
                            { "value": "firstLast", "displayName": "First & Last" },
                            { "value": "minMax", "displayName": "Min & Max" },
                            { "value": "none", "displayName": "None" }
                        ]
                    }
                }
            }
        },
        "categories": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "fontSize": {
                    "type": { "numeric": true }
                },
                "fontColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "rotation": {
                    "type": {
                        "enumeration": [
                            { "value": "0", "displayName": "0°" },
                            { "value": "-45", "displayName": "-45°" },
                            { "value": "-90", "displayName": "-90°" },
                            { "value": "45", "displayName": "45°" },
                            { "value": "90", "displayName": "90°" }
                        ]
                    }
                },
                "maxWidth": {
                    "type": { "numeric": true }
                }
            }
        },
        "legend": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "position": {
                    "type": {
                        "enumeration": [
                            { "value": "top", "displayName": "Top" },
                            { "value": "bottom", "displayName": "Bottom" },
                            { "value": "left", "displayName": "Left" },
                            { "value": "right", "displayName": "Right" }
                        ]
                    }
                },
                "fontSize": {
                    "type": { "numeric": true }
                }
            }
        },
        "commentBox": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "showVariance": {
                    "type": {
                        "enumeration": [
                            { "value": "none", "displayName": "None" },
                            { "value": "absolute", "displayName": "Absolute variance" },
                            { "value": "relative", "displayName": "Relative variance" },
                            { "value": "both", "displayName": "Both" }
                        ]
                    }
                },
                "varianceIcon": {
                    "type": {
                        "enumeration": [
                            { "value": "none", "displayName": "None" },
                            { "value": "triangle", "displayName": "Triangle" },
                            { "value": "circle", "displayName": "Circle" },
                            { "value": "arrow", "displayName": "Arrow" }
                        ]
                    }
                },
                "padding": {
                    "type": { "numeric": true }
                },
                "gap": {
                    "type": { "numeric": true }
                },
                "fontSize": {
                    "type": { "numeric": true }
                },
                "fontColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "markerSize": {
                    "type": { "numeric": true }
                },
                "markerColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                }
            }
        },
        "design": {
            "properties": {
                "actualColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "budgetColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "previousYearColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "forecastColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "positiveVarianceColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "negativeVarianceColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                }
            }
        },
        "differenceHighlighting": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "threshold": {
                    "type": { "numeric": true }
                },
                "highlightPositive": {
                    "type": { "bool": true }
                },
                "highlightNegative": {
                    "type": { "bool": true }
                }
            }
        },
        "axisBreak": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "breakValue": {
                    "type": { "numeric": true }
                }
            }
        },
        "interaction": {
            "properties": {
                "enableSelection": {
                    "type": { "bool": true }
                },
                "enableTooltips": {
                    "type": { "bool": true }
                },
                "enableDrilldown": {
                    "type": { "bool": true }
                },
                "crossFilterMode": {
                    "type": {
                        "enumeration": [
                            { "value": "highlight", "displayName": "Highlight" },
                            { "value": "filter", "displayName": "Filter" }
                        ]
                    }
                },
                "enableTelemetry": {
                    "type": { "bool": true }
                }
            }
        },
        "about": {
            "properties": {
                "version": {
                    "type": { "text": true }
                }
            }
        },
        "topN": {
            "properties": {
                "enable": {
                    "type": { "bool": true }
                },
                "count": {
                    "type": { "numeric": true }
                },
                "sortBy": {
                    "type": {
                        "enumeration": [
                            { "value": "value", "displayName": "Value" },
                            { "value": "name", "displayName": "Name" },
                            { "value": "variance", "displayName": "Variance" }
                        ]
                    }
                },
                "sortDirection": {
                    "type": {
                        "enumeration": [
                            { "value": "desc", "displayName": "Descending" },
                            { "value": "asc", "displayName": "Ascending" }
                        ]
                    }
                },
                "showOthers": {
                    "type": { "bool": true }
                },
                "othersLabel": {
                    "type": { "text": true }
                }
            }
        },
        "smallMultiples": {
            "properties": {
                "columns": {
                    "type": { "numeric": true }
                },
                "spacing": {
                    "type": { "numeric": true }
                },
                "showHeaders": {
                    "type": { "bool": true }
                },
                "scaleMode": {
                    "type": {
                        "enumeration": [
                            { "value": "shared", "displayName": "Shared (same scale)" },
                            { "value": "independent", "displayName": "Independent" }
                        ]
                    }
                }
            }
        },
        "responsive": {
            "properties": {
                "enable": {
                    "type": { "bool": true }
                },
                "minChartWidth": {
                    "type": { "numeric": true }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": { "max": 1 },
                    "group": { "max": 1 },
                    "actual": { "max": 1 },
                    "previousYear": { "max": 1 },
                    "budget": { "max": 1 },
                    "forecast": { "max": 1 },
                    "comments": { "max": 1 }
                }
            ],
            "categorical": {
                "categories": {
                    "select": [
                        { "for": { "in": "category" } },
                        { "for": { "in": "group" } },
                        { "for": { "in": "comments" } }
                    ],
                    "dataReductionAlgorithm": { "top": { "count": 1000 } }
                },
                "values": {
                    "select": [
                        { "bind": { "to": "actual" } },
                        { "bind": { "to": "previousYear" } },
                        { "bind": { "to": "budget" } },
                        { "bind": { "to": "forecast" } },
                        { "bind": { "to": "tooltips" } }
                    ]
                }
            }
        }
    ],
    "privileges": []
}
